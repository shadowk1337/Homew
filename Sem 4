Task 1
#include <stdio.h>
#define ArSize 50

int todec (int arr[], int size);

int main(){
    int seq[ArSize];
    int i = 0;
    while (1 != 0) { // бесконечный цикл
        printf("> ");
        while ((seq[i] = getchar()) != '\n') {
            i++;
        }
        printf("%d", todec(seq, i));
        i = 0;
        printf("\n");
    }
}

int todec (int arr[], int size){
    int hex, p = size - 1, dec = 0, d = 1;
    for (int i = 0; i < size; i++){
        switch (arr[i]){
            case '1':
                hex = 1;
                break;
            case '2':
                hex = 2;
                break;
            case '3':
                hex = 3;
                break;
            case '4':
                hex = 4;
                break;
            case '5':
                hex = 5;
                break;
            case '6':
                hex = 6;
                break;
            case '7':
                hex = 7;
                break;
            case '8':
                hex = 8;
                break;
            case '9':
                hex = 9;
                break;
            case 'a': case 'A':
                hex = 10;
                break;
            case 'b': case 'B':
                hex = 11;
                break;
            case 'c': case 'C':
                hex = 12;
                break;
            case 'd': case 'D':
                hex = 13;
                break;
            case 'e': case 'E':
                hex = 14;
                break;
            case 'f': case 'F':
                hex = 15;
                break;
        }
        for (int i = 0; i < p; i++)
            d *= 16;
        dec += d * hex;
        p--, d = 1;
    }
    return (dec);
}

Task 3
#include <stdio.h>

int main()
{
    int val, c, sum = 0;
    while (1 != 0) {
        printf("> ");
        scanf("%d", &val);
        c = sizeof(val) * 2;
        for (int i = 0; i <= (c - 1); i += 2)
            if (val & (1 << i))
                sum++;
        printf("%d\n", sum);
        sum = 0;
    }
}
