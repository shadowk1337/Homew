Task 2
#include <stdio.h>

int main() {
    char name[50];
    int i = 0;
    while ((name[i] = getchar()) != '\n')
        i++;
    for (int j = 0; j <= i + 3; j++){
        printf("%c", '*');
    }
    printf("%c", '\n');
    printf("%c ", '*');
    for (int j = 0; j < i; j++)
        printf("%c", name[j]);
    printf(" %c", '*');
    printf("%c", '\n');
    for (int j = 0; j <= i + 3; j++){
        printf("%c", '*');
    }
    return 0;
}

Task 3
#include <stdio.h>

int main() {
    for (int i = 1; i <= 10; i++){
        for (int j = 1; j <= 10; j++){
            printf("%3d\t", i * j);
        }
        printf("%c", '\n');
    }
    return 0;
}
